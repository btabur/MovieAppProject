<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="136sp"
    android:layout_margin="10sp"
    android:id="@+id/item_row">


    <ImageView
        android:layout_width="104sp"
        android:layout_height="104sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16sp"
        android:id="@+id/imageView"/>

    <TextView
        android:layout_width="188sp"
        android:layout_height="20sp"
        android:text="Movie Title"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#2B2D42"
        android:id="@+id/text_title"
        android:fontFamily="sans-serif-black"
        app:layout_constraintStart_toEndOf="@id/imageView"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="10sp"
        app:layout_constraintTop_toTopOf="@id/imageView"

        />

    <TextView
        android:layout_width="188sp"
        android:layout_height="36sp"
        android:text="Long \nDescription"
        android:textColor="#8D99AE"
        android:textStyle="bold"
        android:textSize="13sp"
        android:id="@+id/text_description"

        app:layout_constraintTop_toBottomOf="@id/text_title"
        app:layout_constraintStart_toStartOf="@id/text_title"
       />

    <ImageView
        android:layout_width="30sp"
        android:layout_height="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/icon_ileri"
        android:id="@+id/image_ileri"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="16sp"
        app:layout_constraintEnd_toStartOf="@id/image_ileri"
        app:layout_constraintTop_toBottomOf="@id/image_ileri"
        android:layout_marginTop="20sp"
        android:text="02.12.2021"
        android:textColor="#8D99AE"
        android:id="@+id/text_date"/>









</androidx.constraintlayout.widget.ConstraintLayout>

